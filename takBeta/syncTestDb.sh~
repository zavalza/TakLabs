#!/bin/bash

#global variables
prodHost=ds063218.mongolab.com:63218
testHost=ds059509.mongolab.com:59509
prodDB=meteor
testDb=meteor_test
collections= ( users people tags companies cfs._tempstore.chunks cfs.images.filerecord cfs_gridfs._tempstore.chunks cfs_gridfs._tempstore.files cfs_gridfs.images.chunks cfs_gridfs.images.files )

#number of collections
amount=${#collections[@]}

# echo each element in array 
# for loop
for (( i=0;i<$amount;i++)); do
    echo ${collections[${i}]}
done 

mongoexport -h ds059509.mongolab.com:59509 -d meteor_test -c users -u rojinegro -p pierrepaul10 -o users.json 

mongoexport -h ds059509.mongolab.com:59509 -d meteor_test -c tags -u rojinegro -p pierrepaul10 -o tags.json 

 mongoexport -h ds059509.mongolab.com:59509 -d meteor_test -c companies -u rojinegro -p pierrepaul10 -o companies.json

mongoexport -h ds059509.mongolab.com:59509 -d meteor_test -c people -u rojinegro -p pierrepaul10 -o people.json

mongoexport -h ds059509.mongolab.com:59509 -d meteor_test -c cfs._tempstore.chunks -u rojinegro -p pierrepaul10 -o cfs_tempstore_chunks.json 

mongoexport -h ds059509.mongolab.com:59509 -d meteor_test -c cfs.images.filerecord -u rojinegro -p pierrepaul10 -o cfs.images.filerecord.json 

mongoexport -h ds059509.mongolab.com:59509 -d meteor_test -c cfs_gridfs._tempstore.files -u rojinegro -p pierrepaul10 -o cfs_gridfs_tempstore_files.json

mongoexport -h ds059509.mongolab.com:59509 -d meteor_test -c cfs_gridfs.images.chunks -u rojinegro -p pierrepaul10 -o cfs_gridfs_images_chunks.json 

mongoexport -h ds059509.mongolab.com:59509 -d meteor_test -c cfs_gridfs.images.files -u rojinegro -p pierrepaul10 -o cfs_gridfs_images_files.json 

mongoimport -h ds063218.mongolab.com:63218 -d meteor -c cfs_gridfs.images.files -u zavalza -p pierrepaul10 --file cfs_gridfs_images_files.json

mongoimport -h ds063218.mongolab.com:63218 -d meteor -c cfs_gridfs.images.chunks -u zavalza -p pierrepaul10 --file cfs_gridfs_images_chunks.json

mongoimport -h ds063218.mongolab.com:63218 -d meteor -c cfs_gridfs._tempstore.chunks -u zavalza -p pierrepaul10 --file cfs_tempstore_chunks.json 

mongoimport -h ds063218.mongolab.com:63218 -d meteor -c cfs.images.filerecord -u zavalza -p pierrepaul10 --file cfs.images.filerecord.json 

mongoimport -h ds063218.mongolab.com:63218 -d meteor -c people -u zavalza -p pierrepaul10 --file people.json 

mongoimport -h ds063218.mongolab.com:63218 -d meteor -c companies -u zavalza -p pierrepaul10 --file companies.json 

mongoimport -h ds063218.mongolab.com:63218 -d meteor -c tags -u zavalza -p pierrepaul10 --file tags.json 
